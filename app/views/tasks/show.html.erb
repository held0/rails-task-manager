<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
<i class="fa-regular fa-square-check"></i> This task is completed
<% else %>
<i class="fa-light fa-square-check"></i> This task is not completed yet
<% end %>
<br>
<br>
<%= link_to "Update task", edit_task_path(@task) %>
<br>
<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
